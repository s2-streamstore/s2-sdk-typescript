{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@s2-dev/streamstore": ["../streamstore/dist/esm/index.d.ts"]
		}
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules", "**/*.test.ts"]
}
