{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/esm",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "node16",
    "noUncheckedIndexedAccess": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "**/*.test.ts",
    "examples",
    "openapi-ts.config.ts"
  ]
}
